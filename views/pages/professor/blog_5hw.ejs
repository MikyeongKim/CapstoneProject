<!DOCTYPE HTML>
<!--st_community_page1.html 에서 main div 긁어오기-->
<html>

<head>
    <!--헤드내용 include -->
    <% include ../../partials/head.ejs %>
</head>

<body class="homepage">
	<div id="page-wrapper">

	    <!-- Header -->
		<% include ./header.ejs %>

		<!-- Nav include -->
		<% include ./nav.ejs %>


		<!-- Main -->
		<div id="main-wrapper">
			<div id="main" class="container">
				<div class="row">
					<div class="2u">
                    
                        <% include ./sidebar.ejs %>
					</div>

					<div class="10u 12u(mobile) important(mobile)">

						<!--
							
							section class= box feature 중간정렬
							section class= box features 왼쪽정렬
						 -->
						 <div class="content content-right">
                                <article class="box page-content">
                                        <header>
                                            <h2 style="font-size:2.5em;"><a href="#">과제</a></h2>
                                               <!--목록으로 가게끔 연결하기-->
                                               <a style="float:right; margin:2% 0; font-size:1em;" href="#" class="button">글쓰기</a>
                                            
                                            <h2 class="major"></h2>
                                        </header>
        
                                        <div>
                                          
                                            <form method="POST">
                                                <table class="type06" style="vertical-align:middle; text-align:center;">
                                                    <colgroup>
                                                        <col width="8%">
                                                        <col width="32%">
                                                        <col width="16%">
                                                        <col width="16%">
                                                        <col width="16%">
                                                        <col width="20%">
                                                    </colgroup>
                
                                                    <thead scope="row" class="even">
                                                        <tr>
                                                            <th>번호</th>
                                                            <th>제목</th>
                                                            <th>제출방식</th>
                                                            <th>마감일</th>
                                                            <th>제출인원</th>
                                                            <th>평균점수</th>
                                                            <!--세부내용 디비에 맞게 수정해도되요-->
                                                        </tr>
                                                    </thead>
                                                    <tbody scope="row" style="text-align:center; ">
                                                        <!--바로 아래는 뷰짜려고 임시로 만든 <td>목록임-->
        
                                                            <tr>
                                                                <td>1</td>
                                                                <td>과제1 : helloworld</td>
                                                                <td>온라인</a></td>
                                                                <td>2018-03-10 17:30</td>
                                                                <td>26</td>
                                                                <td>67.5</td>
                                                            </tr>
                                                            <tr>
                                                                <td>2</td>
                                                                <td>과제2 : 계산기</td>
                                                                <td>온라인</a></td>
                                                                <td>2018-03-17 23:59</td>
                                                                <td>19</td>
                                                                <td>55.8</td>
                                                            </tr>
                
                                                        <!--td갯수는 최대15개로 fix해야함, 16번글부터는 2번째 페이지로 아웃
                                                            아래 코드는 /community.ejs 긁어온거라서 DB에 맞게 수정해야함!
                                                            <% data.forEach((item,index) => { %>
                                                                <tr>
                                                                    <td><%= index+1 %></td>
                                                                    <td style="text-align:left;">
                                                                        <a href="/community/read/<%=item.board_no%>"><%= item.board_title %>
                                                                        </td>
                                                                    <td><%= item.user_id %></td>
                                                                    <td><%= item.created_at %></td>
                                                                    <td><%= item.board_count %></td>
                                                                </tr>
                                                                <% }); %>
                                                                -->
                                                    </tbody>
                
                                                    <tfoot>
                                                        <tr>
                                                            <td scope="row" class="even" colspan="6">
                
                                                                <!--이전,다음 페이지로 넘어가는 값 구하기-->
                                                                <!--현재페이지 값도-->
                                                                <a href="#" class="icono-caretLeft"></a>
                                                                <a href="#">1</a>
                                                                <a href="#">2</a>
                                                                <a href="#" class="icono-caretRight"></a>
                                                                
                                                            </td>
                                                            
                                                        </tr>
                                                        <tr>
                                                            <td scope="row" class="even" colspan="6">
                                                                    <select id="category" style="width:60px; display:inline-block;">
                                                                        <option selected="selected">제목</option>
                                                                        <option>내용</option>
                                                                        <option>작성자</option>
                                                                        <option>등록일</option>
                                                                    </select>
                                                                    <input type="search" id="search"/>
                                                                    <!--검색버튼 눌렀을때 목록중에서 쏘팅해주는거 코드짜야함-->
                                                                    <input type="submit" value="검색" style="padding:0.4em 1.5em; font-weight:initial; font-size:1em;" />
                
                                                                    <!--안되면 table바로 밖으로 form태그 추가-->
                                                            </td>
                                                            
                                                        </tr>
                                                        
                                                    </tfoot>
                                                </table>
                                                </form>
                                            
                                               
                                        </div>
        
                                        <div style="margin-top:5%;">
                                            <h2 class="major" ></h2>
                                        </div>
        
        
        
                                    </article>
						 </div>			
					</div>

				</div>


			</div>
		</div>


	
	<!-- Footer include -->
	<% include ../../partials/footer.ejs %>

	</div>

	<!-- Scripts -->
	<% include ../../partials/scripts.ejs %>

</body>

</html>