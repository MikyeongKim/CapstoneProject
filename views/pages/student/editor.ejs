                                    <table class="type06"  style="text-align:left; border:none; margin-bottom:0;">
                                    <colgroup>
                                        <col width="1%">
                                        <col width="10%">
                                        <col width="1%">
                                        <col width="1%">
                                        <col width="30%">
                                        <col width="1%">
                                    </colgroup>
                                        <tr>
                                            <td>
                                                <!-- 코드미러 옵션 바꾸는 버튼임-->
                                                <a href="#" class="fas fa-cog fa-2x"></a>
                                            </td>
                                            <td>
                                                <!--언어선택할수 있는 옵션바-->
